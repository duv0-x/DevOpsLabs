{
  "variables": {
      "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
      "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-0f29d5a665bf02d98",
    "source_ami_filter": {
      "owners": ["146328511228"],
      "most_recent": true
    },
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "packer-demo-2"
  }],
  "provisioners": [{
      "type": "file",
      "source": "./scripts/packer-key.pub",
      "destination": "~/.ssh/"
      },
      {
        "type": "shell",
          "inline": ["cat ~/.ssh/packer-key.pub > ~/.ssh/authorized_keys"]
      },
      {
        "type": "shell",
          "script": "scripts/docker-install.sh"
      }
  ]
}